<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextField">Movie Title</label>
                    <input type="text" class="form-control" id="titleTextField" placeholder="Enter the Movie Title" name="Title" value="<%= Movie.Title %>" required>
                </div>
                <div class="form-group">
                    <label for="genreTextField">Movie Genre</label>
                    <input type="text" class="form-control" id="genreTextField" placeholder="Enter the Movie Genre" name="Genre" value="<%= Movie.Genre %>" required>
                </div>
                <div class="form-group">
                    <label for="releaseYearTextField">Movie ReleaseYear</label>
                    <input type="text" class="form-control" id="releaseYearTextField" placeholder="Enter the Movie Release Year" name="ReleaseYear" value="<%= Movie.ReleaseYear %>" required>
                </div>
                <div class="form-group">
                    <label for="ratingTextField">Movie Rating</label>
                    <input type="text" class="form-control" id="ratingTextField" placeholder="Enter the Movie Rating" name="Rating" value="<%= Movie.Rating %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextField">Movie Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextField" placeholder="Enter the Movie Description" name="Description" value="<%= Movie.Description %>" required></textarea>
                </div>
                <div class="form-group">
                    <label for="statusTextField">Movie Status</label>
                    <input type="text" class="form-control" id="statusTextField" placeholder="Enter the Movie Status" name="Status" value="<%= Movie.Status %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>