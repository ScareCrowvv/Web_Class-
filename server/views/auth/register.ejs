<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>

<body style="background-image: url(/Assets/images/background.jpg); background-size: cover; background-position: center; background-attachment: fixed; color: white;">
    <!-- Background and color styling -->

    <!-- Main container -->
    <div class="container min-vh-100 d-flex flex-column justify-content-center align-items-center" style="background: rgba(0, 0, 0, 0.7); border-radius: 15px; padding: 2rem;">

        <!-- Display error message if present -->
        <% if (message.length > 0) { %>
            <div class="alert alert-danger w-100 text-center">
                <%= message %>
            </div>
        <% } %>

        <!-- Registration Form -->
        <div class="w-50">
            <h1 class="text-center fw-bold mb-4">Please Register</h1>
            <form method="post" autocomplete="off" class="p-3">
                <!-- Username Field -->
                <fieldset class="form-group mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" name="username" placeholder="Enter your username:" id="username" required>
                </fieldset>

                <!-- Password Field -->
                <fieldset class="form-group mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Enter your password:" id="password" required>
                </fieldset>

                <!-- Email Field -->
                <fieldset class="form-group mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" name="email" placeholder="Enter your email:" id="email" required>
                </fieldset>

                <!-- Display Name Field -->
                <fieldset class="form-group mb-4">
                    <label for="displayName" class="form-label">Display Name</label>
                    <input type="text" class="form-control" name="displayName" placeholder="Enter your display name:" id="displayName" required>
                </fieldset>

                <!-- Form Buttons -->
                <fieldset class="form-group text-center">
                    <input type="submit" class="btn btn-success px-4 py-2" value="Register">
                    <a href="/" class="btn btn-warning px-4 py-2">Cancel</a>
                </fieldset>
            </form>
        </div>
    </div>
</body>

